{
	"name": "@cerios/playwright-step-decorator",
	"version": "2.0.0",
	"author": "Ronald Veth - Cerios",
	"description": "A Playwright decorator for creating step-based tests",
	"license": "MIT",
	"keywords": [
		"playwright",
		"testing",
		"decorator",
		"step"
	],
	"bugs": {
		"url": "https://github.com/CeriosTesting/playwright-step-decorator/issues"
	},
	"homepage": "https://github.com/CeriosTesting/playwright-step-decorator#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CeriosTesting/playwright-step-decorator.git"
	},
	"scripts": {
		"format": "prettier --write . --cache --ignore-path=.prettierignore",
		"test": "playwright test",
		"prepare": "husky",
		"build": "tsup",
		"check-exports": "attw --pack .",
		"changeset": "npx changeset",
		"changeset:version": "changeset version && npm i",
		"changeset:publish": "tsup && changeset publish",
		"compile": "tsc --noEmit",
		"update-all-packages": "npx npm-check-updates -u && npm run clean-install",
		"clean-install": "rm -rf node_modules package-lock.json && npm i"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@changesets/cli": "^2.29.8",
		"@playwright/test": "^1.58.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@playwright/test": "^1.51.0",
		"typescript": "^5.0.2"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"type": "commonjs",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.mjs",
			"default": "./dist/index.js"
		}
	}
}
